                @Html.EditorFor(model => model.SellerPhone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SellerPhone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SellerAdress, htmlAttributes: new { @class = "control-label col-md-2" })
