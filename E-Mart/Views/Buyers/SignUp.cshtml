@model E_Mart.Models.Buyer

@if ((string)TempData["Referrer"] == "SignUp")
{
    <div class="alert alert-success" style="background-color:red">
        <strong>You have already registered with this E-mail!</strong>
    </div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">

        <div data-aos="fade-down" data-aos-offset="300" data-aos-easing="ease-in-sine" data-aos-duration="1000">

            <img class="rounded mx-auto d-block" src="~/images/Buyer_logo.jpg" width="400" height="350" style="margin-bottom: 20px; margin-top: 20px; " />

        </div>

        <div class="row justify-content-center">
            <div class="col-md-4 justify-content-center ">

                <div class="form-horizontal">
                    <h4 style="text-align: center; animation: scale 1.5s forwards;">Buyer SignUp</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.BuyerName, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BuyerName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BuyerName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.BuyerEmail, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BuyerEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BuyerEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.BuyerPassword, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BuyerPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BuyerPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.ConfirmBuyerPassword, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ConfirmBuyerPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConfirmBuyerPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.BuyerPhone, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BuyerPhone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BuyerPhone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.BuyerAdress, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BuyerAdress, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BuyerAdress, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.BuyerDOB, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.BuyerDOB, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BuyerDOB, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Sign Up" class="btn btn-default" style="font-size: 30px; margin-left: 130px; background-color: #868e96; margin-top: 25px; border-radius: 5px; " onmouseover="this.style.backgroundColor='#006db9'" onmouseout="this.style.backgroundColor='#868e96'" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div style="font-size: 20px">
    @Html.ActionLink("Back to LogIn", "LogIn")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
