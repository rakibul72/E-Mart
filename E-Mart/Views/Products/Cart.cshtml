
@using E_Mart.Models;

<h2 style="text-align: center; margin-top: 10px; margin-bottom: 20px; animation: scale 1.5s forwards;">Your Cart</h2>

<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Quantity
        </th>
        <th>
            Price Per Unit
        </th>

    </tr>

    @if (Session["cart"] != null)
    {

        foreach (Item item in (List<Item>)Session["cart"])
        {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.Quantity
                </td>
                <td>
                    @item.ProductPrice
                </td>
                <td>

                    @Html.ActionLink("Remove Item", "RemoveItem", new { id = item.ProductID })

                </td>
            </tr>
        }
    }

    <tr>
        <td>
        </td>
        <td>
            Total Price:
        </td>
        @if (Session["TotalPrice"] != null)
        {
            <td>
                @Session["TotalPrice"]
            </td>
        }
        else
        {
            <td>
                0.00
            </td>
        }
    </tr>


</table>
@Html.ActionLink("Back", "Index", new { }) |
@Html.ActionLink("Confirm Order", "confirmOrder", new { })