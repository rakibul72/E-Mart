@model E_Mart.Models.TempAdmin

@if ((string)TempData["Referrer"] == "SaveRegister")
{
    <div class="alert alert-success">
        <strong>You have registered successfully</strong>
    </div>
}

@{
    ViewBag.Title = "Admin LogIn";
    var msg = ViewBag.LoginFailed;

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">

        <div data-aos="fade-down" data-aos-offset="300" data-aos-easing="ease-in-sine" data-aos-duration="1000">

            <img class="rounded mx-auto d-block" src="~/images/Admin_logo.png" width="400" height="350" style="margin-bottom: 20px; margin-top: 20px; " />

        </div>

        <div class="row justify-content-center">
            <div class="col-md-3">
                <div class="form-horizontal">
                    <h4 style="text-align: center; animation: fadeDown 1.5s forwards;">Admin LogIn</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group mb-3" style="margin-left:7px">
                        @Html.LabelFor(model => model.AdminEmail, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.AdminEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdminEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:7px">
                        @Html.LabelFor(model => model.AdminPassword, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.AdminPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdminPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="col-md-offset-2 col-md-10" style="text-align:center;">
                            <input type="submit" value="Log In" class="btn btn-default" style="font-size: 30px; margin-left: 37px; background-color: #868e96; margin-top: 25px; border-radius: 5px; " onmouseover="this.style.backgroundColor='#006db9'" onmouseout="this.style.backgroundColor='#868e96'" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

       

    </div>
}

@if (msg != null)
{
    <p class="text-danger">@msg</p>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
