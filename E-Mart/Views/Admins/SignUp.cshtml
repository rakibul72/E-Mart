@model E_Mart.Models.Admin

@{
    ViewBag.Title = "Sign Up";
}

@if ((string)TempData["Referrer"] == "SignUp")
{
    <div class="alert alert-success" style="background-color:red">
        <strong>You have already registered with this E-mail!</strong>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">

        <div data-aos="fade-down" data-aos-offset="300" data-aos-easing="ease-in-sine" data-aos-duration="1000">

            <img class="rounded mx-auto d-block" src="~/images/Admin_logo.png" width="400" height="350" style="margin-bottom: 20px; margin-top: 20px; " />

        </div>

        <div class="row justify-content-center">
            <div class="col-md-4 justify-content-center ">
                <div class="form-horizontal">
                    <h4 style="text-align: center; animation: scale 1.5s forwards;">Admin SignUp</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.AdminName, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AdminName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdminName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.AdminEmail, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AdminEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdminEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.AdminPassword, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AdminPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdminPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3" style="margin-left:55px">
                        @Html.LabelFor(model => model.ConfirmAdminPassword, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ConfirmAdminPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ConfirmAdminPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Sign Up" class="btn btn-default" style="font-size: 30px; margin-left: 130px; background-color: #868e96; margin-top: 25px; border-radius: 5px; " onmouseover="this.style.backgroundColor='#006db9'" onmouseout="this.style.backgroundColor='#868e96'" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div style="font-size: 20px">
    @Html.ActionLink("Back to LogIn", "LogIn")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
